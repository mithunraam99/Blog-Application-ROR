<div class="message">
  <p>
    <small><em><%= time_ago_in_words(message.created_at) %> ago</em></small>
  </p>
  <p>
    <%= gravatar_for(message.user, size: 45) %>
    <strong><%= message.user.username %>:</strong>&nbsp;
    <span class="content">
      <%= message.content %>
    </span>  
  </p>
</div>
<%= form_for @user, html: {class:'form-horizontal'} do |f| %>
  <div class="form-group">
      <%= f.label :username, "Choose username", class:"control-label col-md-2" %>
      <div class="col-md-8">
        <%= f.text_field :username, class:'form-control', placeholder: "Enter your name", autofocus: true %>
      </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class:'control-label col-md-2' %>
    <div class="col-md-8">
      <%= f.email_field :email, class:'form-control', placeholder: "Enter your email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, "Add your Profile Image", class: 'control-label col-md-2' %>
    <div class="col-md-8">
      <%= f.file_field :image, accept: "image/jpeg, image/gif, image/png" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class:'control-label col-md-2' %>
    <div class="col-md-8">
      <%= f.password_field :password, class:'form-control', placeholder: "Choose a password" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm password", class:'control-label col-md-2' %>
    <div class="col-md-8">
      <%= f.password_field :password_confirmation, class:'form-control', placeholder: "Confirm passsword" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-8">
      <%= f.submit(@user.new_record? ? "Create my account" : "Update my account",
      class:'btn btn-primary btn-lg btn-xlg') %>
    </div>
  </div>
<% end %>
